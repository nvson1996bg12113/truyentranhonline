<?xml version="1.0" encoding="utf-8"?>
<com.binhtt.truyentranhonline.widget.AlphaRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mRlMain"
    android:padding="@dimen/layout_margin_small">
    xmlns:android="http://schemas.android.com/apk/res/android"/>

    <com.binhtt.truyentranhonline.widget.AlphaCardView
        android:id="@+id/mCardView"
        android:layout_width="@dimen/avatar_image_size_big"
        android:layout_height="@dimen/avatar_image_size_biggest"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/layout_margin_smallest">

        <include layout="@layout/card_content"/>
    </com.binhtt.truyentranhonline.widget.AlphaCardView>
</com.binhtt.truyentranhonline.widget.AlphaRelativeLayout>
