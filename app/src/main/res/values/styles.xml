<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="Theme.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.TransparentActivity">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="TabBarItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">2</item>
        <item name="android:layout_marginRight">@dimen/_8sdp</item>
        <item name="android:layout_marginTop">@dimen/_4sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ImageFit">
        <item name="android:contentDescription">"Image fit center"</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="ImageCrop">
        <item name="android:contentDescription">"Image center crop"</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="TextWrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ImageViewBig" parent="ImageCrop">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edit_text_paragraph_height</item>
    </style>

    <style name="Paragraph">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="OneSmallestBoldWhite" parent="TextWrapContent">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_smallest</item>
    </style>

    <style name="OneSmallNormalWhite" parent="TextWrapContent">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="OneSmallNormalBlack" parent="TextWrapContent">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="OneSmallBoldBlack" parent="TextWrapContent">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="OneSmallestNormalBlack" parent="TextWrapContent">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_smallest</item>
    </style>

    <style name="OneSmallNormalGray" parent="TextWrapContent">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/text_color_gray</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="MainTab">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TabText">
        <item name="android:textSize">@dimen/text_size_bigger</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EmptyAvatarImage" parent="ImageCrop">
        <item name="android:contentDescription">"Image center crop"</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:padding">@dimen/avatar_image_padding</item>
        <item name="android:cropToPadding">true</item>
        <item name="android:src">@drawable/ic_avatar_profile</item>
    </style>

    <style name="OneMediumNormalWhite" parent="TextWrapContent">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="OneMediumNormalBlack" parent="TextWrapContent">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="OneMediumBoldBlack" parent="TextWrapContent">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OneMediumNormalGray" parent="TextWrapContent">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/text_color_gray</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="OneBigBold" parent="TextWrapContent">
        <item name="android:textColor">@color/black</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/text_size_bigger</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OneBigNormalBlack" parent="TextWrapContent">
        <item name="android:textColor">@color/black</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OneBigNormalWhite" parent="TextWrapContent">
        <item name="android:textColor">@color/white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TwoSmallNormalBlack" parent="TextWrapContent">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="FiveSmallNormalBlack" parent="TextWrapContent">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">5</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>


    <style name="ParagraphSmallNormal" parent="Paragraph">
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/main</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ParagraphSmallNormalBlack" parent="Paragraph">
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/main_black</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ParagraphMediumBold" parent="Paragraph">
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/main</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ParagraphMediumBoldMessage" parent="Paragraph">
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Button" parent="OneMediumNormalWhite">
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:background">@color/main</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ImageTab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ViewLine">
        <item name="android:layout_width">@dimen/view_height</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="ViewLineHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/view_height</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="ViewWhite">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_2sdp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="ViewGray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="Space">
        <item name="android:layout_width">@dimen/_3sdp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="image_child_timeline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="AppTheme.Button.Borderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>
</resources>
